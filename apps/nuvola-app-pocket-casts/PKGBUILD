# Maintainer: Laramy Black <laramy2020@gmail.com>

pkgname=nuvola-app-pocket-casts
pkgver=1.2
pkgrel=1
pkgdesc="pocket casts integration for Nuvola Player."
arch=("any")
url="https://github.com/tiliado/nuvola-app-pocket-casts"
license=('custom:BSD')
depends=('nuvolaruntime' 'imagemagick')
makedepends=('nuvolasdk' 'scour')
source=(https://github.com/tiliado/${pkgname}/archive/${pkgver}.tar.gz)
sha256sums=('e80c09e6b4b9204dd547e89c930308ab8a8b028d8ed9daff770ecf9cc7b0636f')

build() {
    cd "$srcdir/${pkgname}-${pkgver}"
    ./configure --prefix=/usr 
    make all
}

package() {
    cd "$srcdir/${pkgname}-${pkgver}"
    make DESTDIR="${pkgdir}" install
}
